<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
  <Package
    Name="{{ .ProjectName }} {{ .Version }}"
    Manufacturer="Thunder Compute"
    Version="{{ .Version }}"
    Language="1033"
    InstallerVersion="200"
    ProductCode="ABCDDCBA-86C7-4D14-AEC0-86416A69ABDE"
    UpgradeCode="ABCDDCBA-7349-453F-94F6-BCB5110BA4FD">
    <SummaryInformation
      Keywords="Installer"
      Description="{{ .ProjectName }} installer"
      Manufacturer="Thunder Compute"/>

    <Media Id="1" Cabinet="app.cab" EmbedCab="yes"/>

    <Feature Id="Complete" Level="1">
      <ComponentRef Id="MainExecutable"/>
    </Feature>

    <StandardDirectory Id="ProgramFiles{{ if eq .Arch "amd64" }}64{{ end }}Folder">
      <Directory Id="{{ .ProjectName }}" Name="{{ .ProjectName }}">
        <Component Id="MainExecutable" Guid="ABCDDCBA-83F1-4F22-985B-FDB3C8ABD474">
          <File Id="{{ .Binary }}Exe" Name="{{ .Binary }}.exe" Source="{{ .Binary }}.exe" KeyPath="yes"/>
        </Component>
      </Directory>
    </StandardDirectory>
  </Package>
</Wix>
